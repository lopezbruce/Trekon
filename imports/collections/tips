import { Mongo } from 'meteor/mongo';
import { check, Match } from 'meteor/check';
import { Servers } from './servers';

Meteor.methods({
  //add tip function later
  'tips.insert': function() {
    return Tips.insert({
      createdAt: new Date(),
      tip: 0,
      ownerId: this.servers
    });
  },

  'tips.remove': function(tip) {
    return Tips.remove(tip);
  },

  'tips.update': function(bin, content) {
    return Tips.update(tip._id, { $set: { tip } });
  }
});
export const Tips = new Mongo.Collection('tips');
