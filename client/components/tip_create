import React, { Component } from 'react';

class TipCreate extends Component {
  constructor(props) {
    super(props);

    this.state = { error: '' };
  }

  handleSubmit(event) {
    event.preventDefault();

    Meteor.call('tips.insert', this.refs.tip.value, (error) => {
      if (error) {
        this.setState({ error: 'Enter a valid number!' });
      } else {
        this.setState({ error: '' });
        this.refs.tip.value = '';
      }
    });
  }

  render() {
    return (
      <form onSubmit={this.handleSubmit.bind(this)}>
        <div className="form-group">
          <label>Add tip</label>
          <input ref="tip" className="form-control" />
        </div>
        <div className="text-danger">{this.state.error}</div>
        <button className="btn btn-primary">Add Tip!</button>
      </form>
    );
  }
}

export default TipCreate;
